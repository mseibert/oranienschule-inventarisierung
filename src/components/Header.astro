---
import logo from '../assets/logo.png';
import { Image } from 'astro:assets';
---

<header class="bg-white py-4 px-4 sm:px-8 shadow-md rounded-lg">
    <div class="flex flex-col sm:flex-row items-center gap-4 sm:gap-6">
        <a href="/" class="flex-shrink-0">
            <Image 
                src={logo} 
                alt="Oranienschule Logo" 
                width={400} 
                height={115} 
                class="w-full max-w-[180px] sm:max-w-[250px] md:max-w-[350px] lg:max-w-[400px] h-auto"
            />
        </a>
        <div class="flex flex-col sm:flex-row sm:items-center w-full justify-between">
            <div class="w-full overflow-x-auto whitespace-nowrap">
                <h1 class="m-0 font-sans text-base sm:text-lg md:text-xl lg:text-2xl text-gray-700 text-center sm:text-left">
                    Inventar der Oranienschule
                </h1>
            </div>
            <div class="flex flex-col sm:flex-row items-center gap-2 sm:gap-4">
                <a 
                    href="/form" 
                    class="text-orange-500 hover:text-orange-600 font-medium transition-colors underline text-center"
                >
                    Kontakt
                </a>
                <a 
                    href="/api/auth/signin" 
                    class="bg-orange-500 hover:bg-orange-600 text-white !text-white font-medium py-2 px-4 rounded transition-colors inline-block text-center no-underline"
                    style="color: white !important; text-decoration: none;"
                >
                    Login
                </a>
                <button 
                    id="logout" 
                    class="bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded transition-colors hidden"
                >
                    Logout
                </button>
            </div>
        </div>
    </div>
</header>

<script>
    const { signOut } = await import("auth-astro/client")
    
    const logoutButton = document.querySelector("#logout") as HTMLButtonElement
    
    // Handle logout button
    if (logoutButton) {
        logoutButton.addEventListener("click", () => signOut())
    }
</script> 