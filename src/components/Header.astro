---
import logo from '../assets/logo.png';
import { Image } from 'astro:assets';
import { getSession } from 'auth-astro/server';

// Session abrufen mit verbesserter Fehlerbehandlung
let session = null;
let isLoggedIn = false;

try {
  session = await getSession(Astro.request);
  isLoggedIn = !!session?.user;
} catch (error) {
  console.error('Fehler beim Abrufen der Session im Header:', error);
  isLoggedIn = false;
}
---

<header class="bg-white py-4 px-4 sm:px-8 shadow-md rounded-lg">
    <div class="flex flex-col sm:flex-row items-center gap-4 sm:gap-6">
        <a href="/" class="flex-shrink-0">
            <Image 
                src={logo} 
                alt="Oranienschule Logo" 
                width={400} 
                height={115} 
                class="w-full max-w-[180px] sm:max-w-[250px] md:max-w-[350px] lg:max-w-[400px] h-auto"
            />
        </a>
        <div class="flex flex-col sm:flex-row sm:items-center w-full justify-between">
            <div class="w-full overflow-x-auto whitespace-nowrap">
                <h1 class="m-0 font-sans text-base sm:text-lg md:text-xl lg:text-2xl text-gray-700 text-center sm:text-left">
                    Inventar der Oranienschule
                </h1>
            </div>
            <div class="flex flex-col sm:flex-row items-center gap-2 sm:gap-4">
                <a 
                    href="/form" 
                    class="text-orange-500 hover:text-orange-600 font-medium transition-colors underline text-center"
                >
                    Kontakt
                </a>
                {!isLoggedIn ? (
                    <a 
                        href="/api/auth/signin" 
                        id="login-btn"
                        class="bg-orange-500 hover:bg-orange-600 text-white font-medium py-2 px-4 rounded transition-colors inline-block text-center no-underline"
                        style="color: white !important; text-decoration: none;"
                    >
                        Login
                    </a>
                ) : (
                    <div class="flex items-center gap-3">
                        <a 
                            href="/status" 
                            class="flex items-center justify-center w-10 h-10 rounded-full bg-orange-500 hover:bg-orange-600 transition-colors overflow-hidden"
                            title="Profil anzeigen"
                        >
                            {session?.user?.image ? (
                                <img 
                                    src={session.user.image} 
                                    alt="Profilbild" 
                                    class="w-full h-full object-cover"
                                />
                            ) : (
                                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                                </svg>
                            )}
                        </a>
                        <button 
                            id="logout-btn" 
                            class="bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded transition-colors"
                        >
                            Logout
                        </button>
                    </div>
                )}
            </div>
        </div>
    </div>
</header>

<script>
    const { signOut } = await import("auth-astro/client")
    
    const logoutButton = document.querySelector("#logout-btn") as HTMLButtonElement
    
    // Handle logout button
    if (logoutButton) {
        logoutButton.addEventListener("click", async () => {
            try {
                await signOut();
                // Seite neu laden nach dem Logout
                window.location.reload();
            } catch (error) {
                console.error('Fehler beim Logout:', error);
                alert('Fehler beim Abmelden: ' + (error as Error).message);
            }
        });
    }
</script> 