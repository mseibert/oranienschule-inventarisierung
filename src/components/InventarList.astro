---
interface Props {
  pages: Array<{
    params: { slug: string | undefined };
    props: { title: string; text: string; item?: any };
  }>;
}

const { pages } = Astro.props;
---

<div class="links">
  {pages.map(({ params, props }) => (
    <div class="link-item">
      <a href={params.slug ? `/${params.slug}` : '/'}>{props.title}</a>
    </div>
  ))}
</div>

<style>
  .links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    padding: 1rem;
  }

  .link-item {
    padding: 0.5rem;
    border: 1px solid #e5e7eb;
    border-radius: 0.375rem;
    transition: all 0.2s;
  }

  .link-item:hover {
    background-color: #f3f4f6;
    transform: translateX(0.5rem);
  }

  .link-item a {
    text-decoration: none;
    color: #374151;
  }
</style> 